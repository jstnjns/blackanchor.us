<ul class="nav nav-list">
  <li class="nav-header">Store</li>

  <li>
    <a href="http://www.blackanchorworkshop.com/cart">
      <i class="icon-shopping-cart"></i>&nbsp;{{ cart.item_count }}
      Items In Cart
    </a>
  </li>

  {% if customer %}
    <li><a href="/account">Account</a></li>
    <li>{{ "Logout" | customer_logout_link }}</li>

  {% else %}
    <li>{{ "Login" | customer_login_link }}</li>
  {% endif %}

  <li class="nav-header">Browse</li>

  {% for link in linklists.main-menu.links %}
    {% capture child_list_handle %}{{ link.title | handle }}{% endcapture %}

    {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
      <li class="dropdown" id="menu{{ forloop.index }}"
        {% if link.active %}
          class="active"
        {% endif %}
        {% if template contains 'product' and link.title == 'Shop' %}
          class="active"
        {% endif %}
      >
        <a href="#menu{{ forloop.index }}" class="dropdown-toggle"
          data-toggle="dropdown">
          {{ link.title }}
          <b class="caret"></b>
        </a>

        {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
          <ul class="dropdown-menu">
            {% for l in linklists[child_list_handle].links %}
              <li><a href="{{ l.url }}">{{ l.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>

    {% else %}
      <li {% if link.active %}class="active"{% endif %}{% if template contains 'product' and link.title == 'Shop' %}class="active"{% endif %}>
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endif %}
  {% endfor %}

  <li class="nav-header">Social</li>

  <li class="instagram">
    <a href="http://instagram.com/theblackanchor" target="_blank">
      <i class="icon-camera-retro"></i> Instagram
    </a>
  </li>

  <li class="twitter">
    <a href="http://twitter.com/TheBlackAnchor" target="_blank">
      <i class="icon-twitter"></i> Twitter
    </a>
  </li>

  <li class="facebook">
    <a href="http://www.facebook.com/BlackAnchorWorkshop" target="_blank">
      <i class="icon-facebook"></i> Facebook
    </a>
  </li>

  <li class="pinterest">
    <a href="http://pinterest.com/source/shop.blackanchorworkshop.com/" target="_blank">
      <i class="icon-pinterest"></i> Pinterest
    </a>
  </li>
</ul>