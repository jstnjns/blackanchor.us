<header id="dashboard" class="visible-md visible-lg">
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <ul class="nav navbar-nav">
        <li class="instagram">
          <a href="http://instagram.com/blkancr" target="_blank">
            Instagram
          </a>
        </li>
        <li class="twitter">
          <a href="http://twitter.com/TheBlackAnchor" target="_blank">
            Twitter
          </a>
        </li>
        <li class="facebook">
          <a href="http://www.facebook.com/BlackAnchorWorkshop" target="_blank">
            Facebook
          </a>
        </li>
        <li class="pinterest">
          <a href="http://pinterest.com/source/shop.blackanchorworkshop.com/" target="_blank">
            Pinterest
          </a>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li>
          <a href="/cart">
            {{ cart.item_count }}
            {{ cart.item_count | pluralize: 'Item', 'Items' }}
            In Cart
          </a>
        </li>

        {% if shop.customer_accounts_enabled and customer %}
        <li class="dropdown">
          <a href="/account" class="dropdown-toggle"
            data-toggle="dropdown" data-target="#">
            Welcome {{ customer.first_name }}
            <i class="icon icon-angle-down"></i>
          </a>

          <ul class="dropdown-menu pull-right">
            <li><a href="/account">Account</a></li>
            <li>{{ "Logout" | customer_logout_link }}</li>
          </ul>
        </li>

        {% else %}

        <li>{{ "Login" | customer_login_link }}</li>
        {% endif %}
      </ul>
    </div><!-- .container -->
  </div><!-- .navbar -->
</header><!-- #dashboard -->

<header id="header">
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse"
          data-target="#navbar-collapse"
          aria-expanded="false">

          <span class="sr-only">Toggle navigation</span>

          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand" href="/">
          Black Anchor
          <!-- <img src="http://blackanchorworkshop.com/wp-content/themes/blackanchorworkshop/img/brand.png" -->
        </a>
      </div>

      <div class="nav-collapse collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          {% for link in linklists.main-menu.links %}
            {% capture child_list_handle %}
            {{ link.title | handle }}
            {% endcapture %}

            {% if linklists[child_list_handle] and
              linklists[child_list_handle].links.size > 0 %}
              <li class="dropdown" id="menu{{ forloop.index }}"
                {% if link.active %}
                  class="active"
                {% endif %}
                {% if template contains 'product' and link.title == 'Shop' %}
                  class="active"
                {% endif %}
              >
                <a class="dropdown-toggle" href="#menu{{ forloop.index }}"
                  data-toggle="dropdown">
                  {{ link.title }}
                  <b class="caret"></b>
                </a>

                {% if linklists[child_list_handle] and
                  linklists[child_list_handle].links.size > 0 %}
                  <ul class="dropdown-menu">
                    {% for l in linklists[child_list_handle].links %}
                      <li><a href="{{ l.url }}">{{ l.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>

            {% else %}
              <li
                {% if link.active %}
                  class="active"
                {% endif %}
                {% if template contains 'product' and
                  link.title == 'Shop' %}
                  class="active"
                {% endif %}
              >
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div><!-- /.nav-collapse -->
    </div><!-- /.container -->
  </div><!-- /.navbar -->
</header><!-- /#header -->