{% paginate blog.articles by settings.pagination_limit %}
<div class="pane">
  <div class="container">
    {% for article in blog.articles %}
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6">
        <div class="section text-center">
          <header class="header">
            <h1 class="flush">
              <a href="{{ article.url }}">{{ article.title }}</a>
            </h1>
            <p class="text-muted">{{ article.published_at | date: "%d %b %Y" }}</p>
          </header>

          <hr>

          <div class="content">
            {{ article.excerpt_or_content }}

            <p>
              <a href="{{ article.url }}" class="btn btn-primary btn-sm btn-rounded btn-outline">
                Read More
              </a>
            </p>
          </div>
        </div>

        <hr class="divider" />
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% include 'pagination' %}
{% endpaginate %}
